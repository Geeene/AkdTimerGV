<div class="accordion-item">
    <h2 class="accordion-header" id="heading_@NormalizedTitle">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@NormalizedTitle" aria-controls="collapse_@NormalizedTitle">
            @Title
        </button>
    </h2>
    <div id="collapse_@NormalizedTitle" class="collapse show" aria-labelledby="heading_@NormalizedTitle">
        <div class="accordion-body">
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    private string NormalizedTitle { get => Title.Replace(" ", "_"); }

    [Parameter]
    public string AccordionId { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
