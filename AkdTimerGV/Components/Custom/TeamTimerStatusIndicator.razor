@using AkdTimerGV.Components.Models

<!--
    Simple component chosing an icon to represent the current status of the parameter Team.
-->

@if (Team.TimerData.dnf) {
    <i class="bi bi-x-circle" style="color:lightblue"></i>
} else if (Team.TimerData.Active && !Team.TimerData.Paused) {
    <i class="bi bi-play-circle" style="color:lightblue"></i>
} else if (Team.TimerData.Paused) {
    <i class="bi bi-cup-hot" style="color:lightgreen"></i>
} else if (Team.TimerData.GetElapsedActiveTime() > 0) {
    <i class="bi bi-flag-fill" > @Team.TimerData.Standing </i>
}

@code {
    [Parameter]
    public Team Team { get; set; }
}
